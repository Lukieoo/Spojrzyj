<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:fontFamily="@font/productsanslight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Wybierz przedmiot :"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

   <LinearLayout
       android:gravity="center"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           android:elevation="2dp"
           android:padding="5dp"
           android:layout_margin="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_margin="10dp"
               android:id="@+id/liquid"
               android:layout_width="40dp"
               android:layout_height="40dp"
               app:srcCompat="@drawable/liquid" />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView

           android:elevation="2dp"
           android:padding="5dp"
           android:layout_margin="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_margin="10dp"
               android:id="@+id/lens"
               android:layout_width="40dp"
               android:layout_height="40dp"
               app:srcCompat="@drawable/contactlens" />

       </androidx.cardview.widget.CardView>

   </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:fontFamily="@font/productsanslight"
            android:text="sztuk : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/okol"
            style="@style/ContactTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/nameLabelTextView"
            android:inputType="numberDecimal|numberSigned"
            android:labelFor="@+id/okol"
            android:maxLength="4"
            android:maxLines="1"
            android:textAlignment="center" />
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/productsanslight"
            android:text="pojemnosc (ml) : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/oko2"
            style="@style/ContactTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/nameLabelTextView"
            android:inputType="numberDecimal|numberSigned"
            android:labelFor="@+id/okol"
            android:maxLength="8"
            android:maxLines="1"
            android:textAlignment="center" />
    </LinearLayout>



</LinearLayout>