<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anioncode.spojrzyj.AddLensActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close"
            android:tint="@color/colorPrimaryDark" />


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:layout_margin="10dp"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/productsansmedium"
                        android:text="@string/dodaj_nowe"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:fontFamily="@font/productsansmedium" />

            <RelativeLayout

                android:id="@+id/Rel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datePicker"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@color/colorWhite"

                android:elevation="1dp"
                android:padding="2dp">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calendar"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView

                                android:id="@+id/nameLabelTextView"
                                style="@style/ContactLabelTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/productsansmedium"
                                android:text="@string/lewe_oko" />

                            <EditText
                                android:id="@+id/okol"
                                style="@style/ContactTextView"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@id/nameLabelTextView"
                                android:inputType="numberDecimal|numberSigned"
                                android:labelFor="@+id/okol"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:textAlignment="center" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/contactlens" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardid2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/datePicker"

                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/phoneLabelTextView"
                                style="@style/ContactLabelTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/productsansmedium"
                                android:text="@string/prawe_oko" />

                            <EditText
                                android:id="@+id/okop"
                                style="@style/ContactTextView"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:inputType="numberDecimal|numberSigned"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                 <CheckBox
                     style="@style/CheckBoxTheme"
                     android:layout_below="@+id/spin"
                     android:id="@+id/calendar"
                     android:textColor="@color/cardview_dark_background"
                     android:fontFamily="@font/abril_fatface"
                     android:text="Dodaj do kalenarza Telefonu"
                     android:layout_width="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorWhite"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:fontFamily="@font/productsansmedium"
                        android:text="@string/typ" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="50dp"
                        android:fontFamily="@font/productsanslight"
                        android:textAlignment="center"
                        android:theme="@style/SpinnerTheme"></Spinner>
                </RelativeLayout>

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Rel1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-25dp"
                android:elevation="2dp"
                android:src="@drawable/add"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:fabSize="normal" />

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fab"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3788232558823244/5301293338"></com.google.android.gms.ads.AdView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>


